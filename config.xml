<?xml version='1.0' encoding='utf-8'?>
<widget id="pl.org.programstacja.polaczenia" version="1.3.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Połączenia - test HIV</name>
    <description>
        Witamy w aplikacji o połączeniach. Połączeniach między ludźmi - zarówno tych bezpiecznych, jak i tych ryzykownych, zabezpieczonych i niezabezpieczonych. Naszym celem nie jest ocenianie, moralizowanie ani straszenie. Aplikacja ta jest źródłem rzetelnej wiedzy na temat HIV i AIDS.
    </description>
    <author email="info@programstacja.org.pl" href="http:/programstacja.org.pl">
        Program Stacja
    </author>
    <preference name="permissions" value="none" />
    <preference name="phonegap-version" value="cli-6.5.0" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-targetSdkVersion" value="14" /> 
    <preference name="android-installLocation" value="auto" />

    <gap:plugin name="cordova-plugin-inappbrowser" source="npm" />

    <icon src="icon.png" />
    <icon gap:platform="android" gap:qualifier="ldpi" src="res/icon/android/icon-36-ldpi.png" />
    <icon gap:platform="android" gap:qualifier="mdpi" src="res/icon/android/icon-48-mdpi.png" />
    <icon gap:platform="android" gap:qualifier="hdpi" src="res/icon/android/icon-72-hdpi.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />

    <access origin="*" />
</widget>
